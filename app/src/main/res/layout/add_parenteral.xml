<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddParenteral">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vertical_margin">

        <TextView
            style="@style/normalFont"
            android:id="@+id/addParenteralLabel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/nama_parenteral" />

        <TextView
            style="@style/normalFont"
            android:id="@+id/parenteralColon"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            android:layout_toEndOf="@id/addParenteralLabel"/>

        <EditText
            style="@style/normalFont"
            android:id="@+id/addParenteralName"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_toEndOf="@id/parenteralColon"
            android:ems="16"
            android:inputType="text"
            android:text=""
            tools:ignore="LabelFor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vertical_margin">

        <TextView
            style="@style/normalFont"
            android:id="@+id/addVolumeLabel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/volume" />

        <TextView
            style="@style/normalFont"
            android:id="@+id/volumeColon"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            android:layout_toEndOf="@id/addVolumeLabel"/>

        <EditText
            style="@style/normalFont"
            android:id="@+id/addParenteralVolume"
            android:layout_height="28dp"
            android:layout_toEndOf="@id/volumeColon"
            android:ems="16"
            android:inputType="number"
            android:text=""
            tools:ignore="LabelFor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vertical_margin">

        <TextView
            style="@style/normalFont"
            android:id="@+id/addCarbohydrateLabel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/karbohidrat" />

        <TextView
            style="@style/normalFont"
            android:id="@+id/carbohydrateColon"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            android:layout_toEndOf="@id/addCarbohydrateLabel"/>

        <EditText
            style="@style/normalFont"
            android:id="@+id/addParenteralCarbohydrate"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_toEndOf="@id/carbohydrateColon"
            android:ems="16"
            android:inputType="number"
            android:text=""
            tools:ignore="LabelFor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vertical_margin">

        <TextView
            style="@style/normalFont"
            android:id="@+id/addProteinLabel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/protein" />

        <TextView
            style="@style/normalFont"
            android:id="@+id/proteinColon"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            android:layout_toEndOf="@id/addProteinLabel"/>

        <EditText
            style="@style/normalFont"
            android:id="@+id/addParenteralProtein"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_toEndOf="@id/proteinColon"
            android:ems="16"
            android:inputType="number"
            android:text=""
            tools:ignore="LabelFor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vertical_margin">

        <TextView
            style="@style/normalFont"
            android:id="@+id/addFatLabel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/lemak" />

        <TextView
            style="@style/normalFont"
            android:id="@+id/fatColon"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            android:layout_toEndOf="@id/addFatLabel"/>

        <EditText
            style="@style/normalFont"
            android:id="@+id/addParenteralFat"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_toEndOf="@id/fatColon"
            android:ems="16"
            android:inputType="number"
            android:text=""
            tools:ignore="LabelFor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vertical_margin">

        <TextView
            style="@style/normalFont"
            android:id="@+id/addElectroliteLabel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/elektrolit" />

        <TextView
            style="@style/normalFont"
            android:id="@+id/electroliteColon"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            android:layout_toEndOf="@id/addElectroliteLabel"/>

        <EditText
            style="@style/normalFont"
            android:id="@+id/addParenteralElectrolite"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_toEndOf="@id/electroliteColon"
            android:ems="16"
            android:inputType="number"
            android:text=""
            tools:ignore="LabelFor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vertical_margin">

        <TextView
            style="@style/normalFont"
            android:id="@+id/addCaloriesLabel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/kalori" />

        <TextView
            style="@style/normalFont"
            android:id="@+id/caloriesColon"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            android:layout_toEndOf="@id/addCaloriesLabel"/>

        <EditText
            style="@style/normalFont"
            android:id="@+id/addParenteralCalories"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_toEndOf="@id/caloriesColon"
            android:ems="16"
            android:inputType="number"
            android:text=""
            tools:ignore="LabelFor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vertical_margin">

        <Button
            style="@style/normalFont"
            android:id="@+id/buttonAddParenteral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="@string/tambah_parenteral" />
    </RelativeLayout>
</LinearLayout>