<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".Result">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vertical_margin">

                <TextView
                    style="@style/normalFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:text="" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/parenteralLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/parenteral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/oralLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ngt_oral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vertical_margin">

                <TextView
                    style="@style/normalFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:text="@string/volume" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/parenteralVolume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/parenteral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/oralVolume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ngt_oral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vertical_margin">

                <TextView
                    style="@style/normalFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:text="@string/karbohidrat" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/parenteralCarbohydrate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/parenteral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/oralCarbohydrate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ngt_oral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vertical_margin">

                <TextView
                    style="@style/normalFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:text="@string/protein" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/parenteralProtein"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/parenteral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/oralProtein"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ngt_oral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vertical_margin">

                <TextView
                    style="@style/normalFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:text="@string/lemak" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/parenteralFat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/parenteral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/oralFat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ngt_oral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vertical_margin">

                <TextView
                    style="@style/normalFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:text="@string/elektrolit" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/parenteralElectrolite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/parenteral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/oralElectrolite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ngt_oral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vertical_margin">

                <TextView
                    style="@style/normalFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:text="@string/kalori" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/parenteralCalories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/parenteral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/oralCalories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ngt_oral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vertical_margin">

                <TextView
                    style="@style/normalFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:text="@string/total" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/parenteralTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/parenteral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />

                <TextView
                    style="@style/normalFont"
                    android:id="@+id/oralTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ngt_oral"
                    android:layout_weight="2.5"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    style="@style/normalFont"
                    android:id="@+id/buttonCreateNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buat_baru" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
