<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/jenis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/paddingMargin10"
            android:layout_marginBottom="@dimen/paddingMargin10">

            <TextView
                android:fontFamily="@font/raleway_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/paddingMargin10"
                android:layout_weight="0.25"
                android:textSize="@dimen/normalText"
                android:text="Jenis" />

            <Spinner
                android:id="@+id/jenis_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/paddingMargin10"
                android:layout_weight="0.75" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/paddingMargin10">

            <TextView
                android:fontFamily="@font/raleway_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/paddingMargin10"
                android:layout_weight="4"
                android:textSize="@dimen/normalText"
                android:text="Kalori" />

            <TextView
                android:fontFamily="@font/raleway_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/semicolon"
                android:layout_margin="@dimen/paddingMargin10"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

            <EditText
                android:fontFamily="@font/raleway_medium"
                android:id="@+id/kalori_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/paddingMargin10"
                android:layout_weight="6"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/paddingMargin10">

            <TextView
                android:fontFamily="@font/raleway_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/paddingMargin10"
                android:layout_weight="4"
                android:textSize="@dimen/normalText"
                android:text="Protein" />

            <TextView
                android:fontFamily="@font/raleway_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/semicolon"
                android:layout_margin="@dimen/paddingMargin10"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

            <EditText
                android:fontFamily="@font/raleway_medium"
                android:id="@+id/protein_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/paddingMargin10"
                android:layout_weight="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/paddingMargin10">

            <TextView
                android:fontFamily="@font/raleway_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/paddingMargin10"
                android:layout_weight="4"
                android:textSize="@dimen/normalText"
                android:text="Karbohidrat" />

            <TextView
                android:fontFamily="@font/raleway_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/semicolon"
                android:layout_margin="@dimen/paddingMargin10"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

            <EditText
                android:fontFamily="@font/raleway_medium"
                android:id="@+id/karbohidrat_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/paddingMargin10"
                android:layout_weight="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/paddingMargin10">

            <TextView
                android:fontFamily="@font/raleway_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/paddingMargin10"
                android:layout_weight="4"
                android:textSize="@dimen/normalText"
                android:text="URT" />

            <TextView
                android:fontFamily="@font/raleway_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/semicolon"
                android:layout_margin="@dimen/paddingMargin10"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

            <EditText
                android:fontFamily="@font/raleway_medium"
                android:id="@+id/urt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/paddingMargin10"
                android:layout_weight="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Makanan"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>